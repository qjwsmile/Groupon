<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qijianwei.tarena.groupon.ui.FoodActivity">



    <include
    layout="@layout/header_food_ads"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:layout_gravity="center"
            android:text="附近"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/ic_arrow_down_black"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>
        <View
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#000000"
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:text="美食"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="left"
                android:src="@drawable/ic_arrow_down_black"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#000000"
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:text="智能排序"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="left"
                android:src="@drawable/ic_arrow_down_black"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#000000"
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:text="筛选"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="left"
                android:src="@drawable/ic_arrow_down_black"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@+id/linearlayout_id"
        android:id="@+id/pulltorefresh_listview_food"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/banner_dot_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="松榆北路"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/textView2" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
